<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="240dp"
    android:background="#2A424040"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="411dp"
        android:layout_height="match_parent"
        android:background="#2A424040"
        app:cardBackgroundColor="#46313133"
        app:cardCornerRadius="15dp"
        app:cardElevation="3sp">

        <TextView
            android:id="@+id/tv_product"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginBottom="0dp"
            android:padding="20dp"
            android:shadowColor="#EC3C3C"
            android:text="title"
            android:textAlignment="center"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="80dp"
            android:layout_height="54dp"
            android:layout_marginVertical="60dp"
            android:layout_marginLeft="210dp"
            android:text="qt: 1"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/price_calc"
            android:layout_width="176dp"
            android:layout_height="51dp"
            android:layout_marginVertical="90dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:text="price"
            android:textAlignment="center"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/cashback"
            android:layout_width="70dp"
            android:layout_height="29dp"
            android:layout_marginVertical="150dp"
            android:layout_marginLeft="30dp"
            android:text="cashback"
            android:textAlignment="center"
            android:textColor="#388E3C"
            android:textSize="10sp"
            android:textStyle="italic" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/removeQuantity"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginVertical="110dp"
            android:layout_marginLeft="300dp"
            android:backgroundTint="#66CDCCCC"
            app:srcCompat="@drawable/ic_baseline_remove_24" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/addQuantity"
            android:layout_width="70dp"
            android:layout_height="69dp"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="300dp"
            android:backgroundTint="#57CDCCCC"
            android:baselineAlignBottom="false"
            app:srcCompat="@drawable/ic_baseline_add_24" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/removeProduct"
            android:layout_width="204dp"
            android:layout_height="42dp"
            android:layout_marginVertical="177dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/rounded_corner_button"
            android:backgroundTint="#D10808"
            android:hapticFeedbackEnabled="false"
            app:srcCompat="@android:drawable/ic_menu_delete" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
