<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    tools:ignore="MissingConstraints">

    <androidx.cardview.widget.CardView
        android:layout_width="411dp"
        android:layout_height="161dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="88dp"
            android:layout_height="85dp"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="#255A5855"
            app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

        <TextView
            android:id="@+id/basketDate"
            android:layout_width="94dp"
            android:layout_height="51dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="basketDate" />

        <TextView
            android:id="@+id/basketPrice"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_marginVertical="50dp"
            android:layout_marginLeft="270dp"
            android:layout_weight="1"
            android:text="basketPrice"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/basketStatus"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="110dp"
            android:layout_weight="1"
            android:backgroundTint="#EDEEEF"
            android:drawableLeft="@drawable/ic_baseline_check_circle_24"
            android:text="validated"
            android:textAlignment="center"
            android:textSize="8sp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>